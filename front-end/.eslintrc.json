{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": true,
        "trailingComma": "all",
        "printWidth": 80
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true
  }
}
